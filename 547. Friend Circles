class Solution {
    public int findCircleNum(int[][] M) {
        int[] visited = new int[M.length];
        int res = 0;
        for(int i=0; i<visited.length; i++){
            if(visited[i] == 0) {
                dfs(M, visited, i);
                res++;
            }
        }
        return res;
    }
    
    public void dfs(int[][] M, int[] visited, int i){
        for(int j=0; j<visited.length; j++){
            if(M[i][j] == 1 && visited[j] == 0){
                visited[j] = 1;
                dfs(M, visited, j);
            }
        }
    }
}
